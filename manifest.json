{
    "manifest_version": 2,
    "name": "Word Counter",
    "version": "1.0",
    "description": "Word counter for web pages",
    "permissions": [
        "contextMenus",
        "tabs",
        "activeTab",
        "http://*/*",
        "https://*/*",
        "https://docs.google.com/",
        "clipboardWrite",
        "menus",
        "storage",
        "tts",
        "webNavigation"
    ],
    "icons": {
        "48": "icons/48.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "/popup/popup.js"
            ]
        }
    ],
    "browser_action": {
        "browser_style": true,
        "default_icon": {
            "48": "icons/48.png"
        },
        "default_title": "Word Counter",
        "default_popup": "/popup/popup.html"
    }
}