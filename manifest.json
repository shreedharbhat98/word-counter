{
    "manifest_version": 2,
    "name": "Word Counter",
    "version": "1.0",
    "description": "Word counter for web pages",
    "permissions": [
        "http://*/*",
        "https://*/*",
        "https://docs.google.com/",
        "menus"
    ],
    "icons": {
        "48": "icons/48.svg"
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "/popup/popup.js"
            ]
        }
    ],
    "browser_action": {
        "browser_style": true,
        "default_icon": {
            "48": "icons/48.svg"
        },
        "default_title": "Word Counter",
        "default_popup": "/popup/popup.html"
    }
}