{
    "manifest_version": 2,
    "name": "Word Counter",
    "version": "1.0",
    "description": "Adds a red border to all webpages matching mozilla.org.",
    "permissions": [
        "contextMenus",
        "tabs",
        "activeTab"
    ],
    "icons": {
        "48": "icons/48.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "popup.js"
            ]
        }
    ],
    "browser_action": {
        "browser_style": true,
        "default_icon": {
            "48": "icons/48.png"
        },
        "default_title": "Word Counter",
        "default_popup": "/html/popup.html"
    }
}